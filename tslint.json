{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier",
    "tslint-config-airbnb"
  ],
  "rules": {
    "object-literal-sort-keys": false,
    "jsx-no-lambda": false,
    "variable-name": false,
    "ter-arrow-parens": [true, "always"],
    "semicolon": [
      true,
      "never"
    ]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "**/__test__/**",
      "src/service-workers/registerServiceWorker.js"
    ]
  },
  "jsRules": {
    "object-literal-sort-keys": false
  }
}
